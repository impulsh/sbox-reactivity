<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IsAotCompatible>true</IsAotCompatible>
		<EnableTrimAnalyzer>true</EnableTrimAnalyzer>
		<RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
		<DisableImplicitNuGetFallbackFolder>true</DisableImplicitNuGetFallbackFolder>
	</PropertyGroup>

	<!--
		sandbox assemblies are referenced via local game install; compile the source directly so we can run tests
		without requiring the game assets
	-->
	<ItemGroup>
		<Compile Include="../Sandbox.Reactivity/Code/**/*.cs" LinkBase="Sandbox.Reactivity" />
		<Compile Remove="../Sandbox.Reactivity/Code/obj/**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="FakeItEasy" Version="9.0.1" />
		<PackageReference Include="TUnit" Version="1.13.30" />
	</ItemGroup>
</Project>
